/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 * Nextflow config file for CAW project
 * working on milou (UPPMAX)
 * -------------------------------------------------
 * Should be saved either within CAW installation
 * as nextflow.config, or with Nextflow installation
 * as $NXF_HOME/config
 */


executor {
  name = 'local'
}

process {
  cpus = 8
  memory = 15.GB
  time = 1.h
}

params {
  runTime       = 2.h
  singleCPUMem  = 1.5.GB

  acLoci        = '$PWD/CAW-References/1000G_phase3_20130502_SNP_maf0.3.loci'
  cosmic        = '$PWD/CAW-References/b37_cosmic_v74.noCHR.sort.4.1.vcf'
  cosmicIndex   = '$PWD/CAW-References/b37_cosmic_v74.noCHR.sort.4.1.vcf.idx'
  dbsnp         = '$PWD/CAW-References/dbsnp_138.b37.vcf'
  dbsnpIndex    = '$PWD/CAW-References/dbsnp_138.b37.vcf.idx'
  genome        = '$PWD/CAW-References/human_g1k_v37_decoy.fasta'
  genomeDict    = '$PWD/CAW-References/human_g1k_v37_decoy.dict'
  genomeIndex   = '$PWD/CAW-References/human_g1k_v37_decoy.fasta.fai'
  intervals     = "$PWD/CAW-References/centromeres.list"
  kgIndels      = '$PWD/CAW-References/1000G_phase1.indels.b37.vcf'
  kgIndex       = '$PWD/CAW-References/1000G_phase1.indels.b37.vcf.idx'
  mantaIndex    = '$PWD/CAW-References/human_g1k_v37_decoy.fasta'
  mantaRef      = '$PWD/CAW-References/human_g1k_v37_decoy.fasta.fai'
  millsIndels   = '$PWD/CAW-References/Mills_and_1000G_gold_standard.indels.b37.vcf'
  millsIndex    = '$PWD/CAW-References/Mills_and_1000G_gold_standard.indels.b37.vcf.idx'
  snpeffDb      = 'GRCh37.75'
  vardictHome   = '/home/'
}
