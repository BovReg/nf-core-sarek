/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 * Nextflow config file for CAW project
 * working on milou (UPPMAX)
 * -------------------------------------------------
 * Should be saved either within CAW installation
 * as nextflow.config, or with Nextflow installation
 * as $NXF_HOME/config
 */


executor {
  name = 'local'
}

params {
  runTime       = 2.h
  singleCPUMem  = 1.5.GB
  genome = 'GRCh37'
  genomes {
    'GRCh37' {
      bundleDir   = '/PathToReferences/'
      vardictHome = '/home/'
    }
  }
}

process {
  cpus = 8
  memory = 15.GB
  time = 1.h
}
